    }
    .scroll-hidden{
        scrollbar-color: transparent transparent;
        scrollbar-width: none;
    }
    .gradient {
        background: linear-gradient(to bottom left, #4c51bf, #000);
        animation: forwards 1s ease-in-out;

    }
    @keyframes forwards2 {
        from {
            background: linear-gradient(to bottom left, #4c51bf, #000);
            background-size: 30% 30%;
            opacity: 0;
        }
        to {
            background: linear-gradient(to top right, #4c51bf, #000);
            background-size: 100% 100%;
            opacity: 1;
        }
    }
   .sidebar {
    transition: width 0.7s cubic-bezier(0.4,0,0.2,1), opacity 0.7s cubic-bezier(0.4,0,0.2,1);
    width: 0;
    opacity: 0;
    overflow: hidden;
    min-width: 0;
}

.sidebar.open {
    width: 250px;
    opacity: 1;
    min-width: 250px;
}
    
    .menu {
        transition: transform 0.2s ease-in-out;
        
    }
    

   
