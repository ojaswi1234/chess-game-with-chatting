    <script>
       const menubtn = document.querySelector('.menu');
    const sider = document.querySelector('.sidebar');
    const profile = document.querySelector('.profile');
    const lab = document.querySelector('.lab');

    menubtn.addEventListener('click', () => {
        sider.classList.toggle('open');
        profile.classList.toggle('hidden'); 
        if (sider.classList.contains('open')) {
            menubtn.innerHTML = '✕'; // Change to close icon
            lab.classList.add('hidden'); // Hide the lab text
        } else {
            menubtn.innerHTML = '☰'; // Change back to menu icon
            lab.classList.remove('hidden'); // Show the lab text
        }
    });
        
    </script>
